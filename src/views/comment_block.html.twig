{% if comment.rate < 0 %}
    <div class="chat-panel panel panel-danger">
{% else %}
    <div class="chat-panel panel panel">
{% endif %}
   <div class="panel-heading">
      <a href="{{app_url}}/{{comment.phone_number}}">+1 ({{comment.phone_number|slice(0, 3)}}) {{comment.phone_number|slice(3, 3)}}-{{comment.phone_number|slice(6, 4)}}</a>
   </div>
   <!-- /.panel-heading -->
   <div class="panel-body">
      <ul class="chat">
         <li class="left clearfix">
            <span class="chat-img pull-right">
               {% if comment.rate < 0 %}
                  <div class="comment-badge danger"><i class="fa fa-user"></i></div>
               {% elseif comment.rate > 0 %} 
                  <div class="comment-badge success"><i class="fa fa-user"></i></div> 
               {% else %} 
                  <div class="comment-badge warning"><i class="fa fa-user"></i></div>   
               {% endif %}
            </span>
            <div class="chat-body clearfix">
               <div class="header clearfix">
                  <strong class="primary-font">{{comment.name|escape}}</strong><br>
                  <small class="pull-left text-muted clearfix">
                  <i class="fa fa-clock-o fa-fw"></i>{{comment.created_at|escape}}</small><br>
                  <strong class="primary-font">Call type: </strong>{{comment.call_type|escape}}<br>
                  <strong class="primary-font">Rating: </strong>{{comment.rate|escape}}<br>
               </div>
               <p>{{comment.comment|escape}}</p>
            </div>
         </li>
      </ul>
   </div>
   <!-- /.panel-body -->
</div>    