{% extends 'base.html.twig' %}

{% block title %}Area Codes{% endblock %}

{% block body %}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a href="{{app_url}}">Home</a> / {{area.code}}</div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <table id="area_code" class="table table-striped table-responsive">
                <tbody>
                <tr>
                    <td class="text-bold">Area Code:</td><td>{{area.code}}</td>
                </tr>
                <tr>
                    <td class="text-bold">Country:</td><td>{{area.country_name}}</td>
                </tr>
                <tr>
                    <td class="text-bold">State/Province:</td><td><a href="/state/{{area.state_name}}">{{area.state_name}}</a></td>
                </tr>
                <tr>
                    <td class="text-bold">Major City:</td><td>{{area.major_city}}</td>
                </tr>
                <tr>
                    <td class="text-bold">Time Zone:</td><td>{{area.time_zone}}</td>
                </tr>
                                                </tbody>
            </table>
            
            <div class="common-desc">
                 {{area.code}} is a phone number area code located in the city of
                 {{area.major_city}} in {{area.state_name}}.
                 Please check general information and active prefixes in this area code.   
            </div>
            
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            Active Prefixes in Area Code {{area.code}}</div>
        <!-- /.panel-heading -->
        <div class="panel-body">
                                        
            <table id="areacode-content" class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th data-column-id="prefix" data-identifier="true">Prefix</th>
                        <th data-column-id="city">Primary City</th>
                        <th data-column-id="usage">Usage</th>
                        <th data-column-id="company">Company</th>
                    </tr>
                </thead>                             
                <tbody>
                    {% for prefix in prefixes%}
                    <tr>
                        <td><a href="{{app_url}}/{{area.code}}-{{prefix.code}}">{{area.code}}-{{prefix.code}}-XXXX</a></td>
                        <td>{{prefix.city}}</td>
                        <td>{{prefix.p_usage}}</td>
                        <td>{{prefix.company}}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            <div class="row">
                <div class="col-md-12 text-center">
                    {{pagination}}
                </div>
                <div class="col-md-6 text-right">
                    <!-- <p id="showitems" style="margin:26px;">Showing 1 - 50 of total 716 entries.</p> -->
                </div>
            </div>
            <br><br>
            
        </div>
    </div>                
</div>
{% endblock %}                