{% extends 'base.html.twig' %}

{% block title %}Phone Checker{% endblock %}

{% block body %}

<div class="col-lg-12">                                           
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <a href="{{app_url}}/{{state.name}}">Home</a>/{{state.state_name}}</div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <table id="area_code" class="table table-striped table-responsive">
                                <tbody>
                                                                <tr>
                                    <td class="text-bold">Country:</td><td>{{state.country_name}}</td>
                                </tr>
                                                                                                <tr>
                                    <td class="text-bold">State/Province:</td><td>{{state.state_name}}</td>
                                </tr>
                                                                                                <tr>
                                    <td class="text-bold">Time Zone:</td><td>{{state.time_zone}}</td>
                                </tr>
                                                                </tbody>
                            </table>
                            
                            <div class="common-desc">
                                 Please check general information and phone number area codes in {{state.state_name}}.

                            </div>
                            
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {{state.state_name}} Area Code
                     
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="row">
                            {% for code in areas%}
                                <div class="col-md-3 col-xs-6 col-lg-2 text-center"><a href="{{app_url}}/area_code/{{code.code}}">{{code.code}}</a></div>
                            {% endfor %}
                            </div>
                        </div>
                    </div>                
                    
                </div>
{% endblock %}